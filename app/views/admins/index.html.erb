<div container="admin_index_container">
  <table class="table table-striped table-hover table-condensed admin_index">
    <colgroup>
      <col width="120px;">
      <col width="120px;">
      <col width="120px;">
      <col width="120px;">
      <col width="100px;">
      <col width="200px;">
      <col width="140px;">
      <col width="400px;">
      <col width="500px;">
      <col width="550px;">
      <col width="500px;">
      <col width="500px;">
      <col width="500px;">
    </colgroup>
    <thead>
    <tr class="row">
      <th colspan="6">Information</th>
      <th>Q1</th>
      <th>Q2</th>
      <th>Q3</th>
      <th>Q4</th>
      <th>Q5</th>
      <th>Q6</th>
    </tr>
    <tr>
      <th>회사명</th>
      <th>담당자</th>
      <th>부서명</th>
      <th>사무실 전화</th>
      <th>직책</th>
      <th>이메일</th>
      <th>휴대폰</th>
      <th><%= @questions[0] %></th>
      <th><%= @questions[1] %></th>
      <th><%= @questions[2] %></th>
      <th><%= @questions[3] %></th>
      <th><%= @questions[4] %></th>
      <th><%= @questions[5] %></th>
    </tr>
    </thead>
    <tbody class="">
      <% @answers.each do |ans| %>
        <tr>
          <td><%= ans.company_name %></td>
          <td><%= ans.manager_name %></td>
          <td><%= ans.department %></td>
          <td><%= ans.phone %></td>
          <td><%= ans.work_level %></td>
          <td><%= ans.email %></td>
          <td><%= ans.cellphone %></td>
          <td><%= @answer[0][ans.answer_1] %></td>
          <td><%= @answer[1][ans.answer_2] %></td>
          <td><%= @answer[2][ans.answer_3] %></td>
          <td><%= @answer[3][ans.answer_4] %></td>
          <td><%= @answer[4][ans.answer_5] %></td>
          <td><%= @answer[5][ans.answer_6] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
